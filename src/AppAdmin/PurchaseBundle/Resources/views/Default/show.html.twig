{% extends 'AppAppBundle::admin_layout.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1>Zamówienie</h1>
    </div>

    <dl class="dl-horizontal">
        <dt>&nbsp;</dt>
        <dd><strong>{{ purchase.purchaseDetails.fullName }}</strong></dd>
        {% if purchase.purchaseDetails.companyName != '' %}
            <dt>&nbsp;</dt>
            <dd>{{ purchase.purchaseDetails.companyName }}</dd>
        {% endif %}
        <dt>&nbsp;</dt>
        <dd>{{ purchase.purchaseDetails.email }}</dd>
        <dt>&nbsp;</dt>
        <dd>{{ purchase.purchaseDetails.phoneNumber }}</dd>
        <dt>&nbsp;</dt>
        <dd>
            {{ purchase.purchaseDetails.postalCode }}
            {{ purchase.purchaseDetails.city }}
        </dd>
        <dt>&nbsp;</dt>
        <dd>
            {{ purchase.purchaseDetails.address }}
        </dd>
    </dl>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Nazwa produktu</th>
                <th>Ilość</th>
            </tr>
        </thead>
        <thead>
            {% for item in items %}
                <tr>
                    <td>{{ item.product.name }}</td>
                    <td style="text-align: right">{{ item.quantity }}</td>
                </tr>
            {% endfor %}
        </thead>
    </table>

    <a href="{{ path('admin_order_index') }}" class="btn btn-default">Powrót do listy zamówień</a>

    {% if not purchase.finished %}
        <a href="{{ path('admin_order_finish', { purchaseId: purchase.id }) }}" class="btn btn-primary remove-link">Oznacz jako wykonane</a>
    {% endif %}
{% endblock body %}
