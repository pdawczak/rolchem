{% extends 'AppAppBundle::admin_layout.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1>Kategorie</h1>
    </div>

    <table class="table table-bordered table-condensed table-striped">
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Akcja</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('admin_category_edit', { categoryId: category.id }) }}">Edytuj</a>
                        <a href="{{ path('admin_category_delete', { categoryId: category.id }) }}" class="remove-link">Usu≈Ñ</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_category_new') }}" class="btn btn-primary">{{ icon('plus') }} Nowa kategoria</a>
{% endblock body %}
