{% extends 'AppAppBundle::app_layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <div class="page-header">
                <h2>Proszę wybrać kategorię:</h2>
            </div>

            <div class="list-group">
                {% for category in categories %}
                    <a href="{{ path('app_category_show', { categoryId: category.id }) }}"
                       class="list-group-item {% if selectedCategory is defined and category == selectedCategory %}active{% endif %}">
                        <h4>{{ category.name }}</h4>
                    </a>
                {% endfor %}
            </div>

        </div>
    </div>
{% endblock body %}
