<!doctype html>
{#<!--[if lt IE 7 ]> <html lang="de"> <![endif]-->#}
{#<!--[if IE 7 ]>    <html lang="de"> <![endif]-->#}
{#<!--[if IE 8 ]>    <html lang="de"> <![endif]-->#}
{#<!--[if (gte IE 9)|!(IE)]><!--> <html lang="de"> <!--<![endif]-->#}
<html lang="pl">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
    <script src="https://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% stylesheets filter='cssrewrite'
        '@AppAppBundle/Resources/public/css/app.css'
        'assets/vendor/jquery.gritter/css/jquery.gritter.css'
    %}
        <link rel="stylesheet" type="text/css" media="all" href="{{ asset_url }}" />
    {% endstylesheets %}
    <link href="{{ asset('/css/bootstrap.css') }}" rel="stylesheet" media="screen">

    {% block stylesheets %}
    {% endblock stylesheets %}
    <title>
        {% block title %}E-Rolchem{% endblock %}
    </title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>

<body data-ng-app="rolchemApp" data-ng-controller="mainController">
    {{ render(controller('AppAppBundle:Default:topNav', { request: app.request })) }}

    <div class="container" id="main-container-admin">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                {% include 'AppAppBundle::_flashes.html.twig' with { 'close': true } %}

                <div class="add-item"></div>
                <div class="growl"></div>
                {% block body %}
                {% endblock body %}
            </div>
        </div>
    </div>

    <script src="{{ asset('/assets/vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('/assets/vendor/jquery.gritter/js/jquery.gritter.min.js') }}"></script>
    <script src="{{ asset('/assets/vendor/angular/angular.js') }}"></script>
    <script src="{{ asset('/assets/js/app/app_main.js') }}"></script>
    <script src="{{ asset('/assets/js/app/mainController.js') }}"></script>
    <script src="{{ asset('/assets/js/app/growl.js') }}"></script>
    <script src="{{ asset('/assets/js/app/orders/navIndicator.js') }}"></script>
    <script src="{{ asset('/assets/js/app/orders/addItem.js') }}"></script>
    <script src="{{ asset('/js/bootstrap.js') }}"></script>

    {% block javascripts %}
    {% endblock javascripts %}
</body>
</html>
